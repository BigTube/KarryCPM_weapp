<template>
  <view class="container">
    <view class="input-wrapper">
        <wxc-input type="text" title="发货人" value="供应商xxx" disabled>
        </wxc-input>
        <wxc-input type="text" title="产品信息" value="二维码扫码枪（DS43108-SR）" disabled>
        </wxc-input>
        <wxc-input type="text" title="申购人" value="Alex" disabled>
        </wxc-input>
        <wxc-input type="text" title="采购金额" value="7500元" disabled>
        </wxc-input>
    </view>
    <wxc-button size="large" type="primary" loading="{{false}}" value="扫码收货" bindclick="handleScan"></wxc-button>
    <wxc-toast is-show="{{$toast.show}}" text="{{$toast.title}}" icon="{{$toast.icon}}" icon-color="#ff5777"></wxc-toast>
  </view>
</template>

<style lang="less">
  .container{
    display: flex;
    justify-content: center;
  }
  .input-wrapper {
    width: 100%;
    background: #fff;
  }
</style>

<script>
  import wepy from 'wepy'
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '扫码收货',
      usingComponents: {
        'wxc-button': '../../packages/@minui/wxc-button/dist/index',
        'wxc-toast': '../../packages/@minui/wxc-toast/dist/index',
        'wxc-input': '../../packages/@minui/wxc-input/dist/index',
      }
    };
    data = {
      $toast: {
        show: false,
        title: '',
        icon: ''
      }
    }
    methods = {
      handleScan(e) {
        wepy.scanCode({
          success: (res) => {
            console.log(res)
            this.$toast = {
              show: true,
              title: '确认成功，订单号为' + res.result,
              icon: 'yes'
            }
            this.$apply()
            setTimeout(() => {
              this.$toast = {
                show: false,
                title: '',
                icon: ''
              }
              this.$apply()
            }, 1500)
          }
        })
      }
    };
  }
</script>
